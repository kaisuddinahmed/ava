{
  "name": "ava",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:server": "turbo run dev --filter=@ava/server",
    "dev:dashboard": "turbo run dev --filter=@ava/dashboard",
    "dev:widget": "turbo run dev --filter=@ava/widget",
    "dev:demo": "turbo run dev --filter=@ava/demo",
    "db:push": "turbo run db:push --filter=@ava/db",
    "db:generate": "turbo run db:generate --filter=@ava/db",
    "db:seed": "tsx scripts/seed-friction-catalog.ts && tsx scripts/seed-mswim-defaults.ts",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed"
  },
  "devDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.57.1",
    "concurrently": "^9.2.1",
    "prisma": "6.3.0",
    "shell-quote": "^1.8.3",
    "tsx": "^4.19.0",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@prisma/client": "6.3.0",
    "array-flatten": "^3.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  }
}
